#!/bin/sh

id="$1"
class="$2"
instance="$3"

case "$class" in
    feh|imv|[Pp]cmanfm) echo state=floating ;;
    Firefox|Nightly) echo desktop=^2 ;;
    Wine|steam_app_*) echo desktop=^4 follow=off ;;
    Steam) echo desktop=^4 follow=off focus=off layer=below ;;
    Lutris) echo desktop=^4 ;;
    discord|Mumble|Rocket.Chat|obs) echo desktop=^3 follow=off focus=off ;;
    Deluge) echo desktop=^3 ;;
esac

case "$instance" in
    Navigator) echo desktop=^2 state=tiled follow=off focus=on ;;
    Dialog) echo follow=on focus=on ;;
    Places) echo state=floating ;;
    Minecraft*|dotnet|*.exe) echo desktop=^4 follow=off focus=off ;;
esac

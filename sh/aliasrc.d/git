alias g=git

# working
alias gws='git status --short'
alias gwS='git status --long'
alias gwd='git diff'
alias gwD='git diff --word-diff'

# repo
alias gru='git pull' # update
alias grp='git push'
alias grc='git clone'
alias gra='git add'
alias grc='git commit'

# stash
alias gs='git stash'
alias gsa='git stash apply'
alias gsl='git stash list'
alias gss='git stash show'

#!/bin/sh

run() {
    while read -r cmd; do
        eval "$cmd" &
    done
}

find "${XDG_CONFIG_HOME:-$HOME/.config}/autostart" \
    -maxdepth 1       \
    -name '*.desktop' \
    -type f           \
    -exec             \
        awk '/^Exec=/{print $0; exit}' '{}' \; |
        cut -d= -f2-                           |
        run
